{
  "name": "nextjs-ethereum-starter",
  "version": "independent",
  "private": true,
  "scripts": {
    "dev": "yarn workspace frontend dev",
    "build": "yarn workspace frontend build",
    "start": "yarn workspace frontend start",
    "export": "yarn workspace frontend export",
    "clean:contracts": "yarn workspace hopr-stake clean",
    "clean:frontend": "yarn workspace frontend clean",
    "clean": "yarn clean:contracts && yarn clean:frontend",
    "compile": "yarn clean:contracts && yarn workspace hopr-stake build",
    "chain": "yarn workspace hopr-stake chain",
    "deploy": "yarn workspace hopr-stake deploy",
    "connect": "cp -R packages/hopr-stake/types packages/frontend && cp -R packages/hopr-stake/hardhat/artifacts packages/frontend"
  },
  "workspaces": {
    "packages": [
      "packages/*"
    ],
    "nohoist": [
      "**"
    ]
  }
}
